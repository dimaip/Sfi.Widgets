prototype(TYPO3.Neos.NodeTypes:Image) {
	templatePath = 'resource://Sfi.Widgets/Private/Templates/NodeTypes/Image.html'
	imageClassName = "Figure"
}

prototype(TYPO3.Neos.NodeTypes:Text) {
	attributes.class = ${node.properties.variant=='Inherit'?(q(node).parent().is('[instanceof Sfi.Widgets:TextWithImage]')?'StyleSet-Modern':(q(node).parents('[instanceof TYPO3.Neos.NodeTypes:Page]').is('[instanceof Sfi.Sfi:PagePresentation]')?'StyleSet-Classic':'StyleSet-SemiModern')):node.properties.variant}
}

prototype(TYPO3.Neos.NodeTypes:Headline) {
	templatePath = 'resource://Sfi.Widgets/Private/Templates/NodeTypes/Headline.html'
	attributes.class = ${node.properties.variant=='Inherit'?(q(node).parent().is('[instanceof Sfi.Widgets:TextWithImage]')?'StyleSet-Modern':(q(node).parents('[instanceof TYPO3.Neos.NodeTypes:Page]').is('[instanceof Sfi.Sfi:PagePresentation]')?'StyleSet-Classic':'StyleSet-SemiModern')):node.properties.variant}
}
